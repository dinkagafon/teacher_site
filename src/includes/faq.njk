{% if page.url === '/' %}
  {% set faq_list = faq %}
{% else %}
  {% set faq_list = faq_block %}
{% endif %}

<section class="section" id="faq">
  <h2 class="section__header text_h2">Вопросы и ответы</h2>
  <div class="section__content">
    <div class="faq__content">
      {% from 'macros/faq-block.njk' import faqBlock %}
      {% for item in faq_list %}
        {{ faqBlock(
					question=item.q,
          answer=item.a,
          lineColor=colors.accent,
          iconColor=colors.background
				) }}
      {% endfor %}
    </div>
  </div>
</section>