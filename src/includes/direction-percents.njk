<section class="section" id='statistics'>
  <h2 class="section__header text_h2">{{ section.header }}</h2>
  <div class="section__content">
    <div class="direction-percents__container">
      {% from 'macros/benefit.njk' import benefit %}
      {% for point in section.list %}
        {{ benefit(
					percent=point.percent,
          text=point.text,
          color=colors.accent_contrast,
          gradient=colors.gradient
				) }}
      {% endfor %}
    </div>
  </div>
</section>